<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background0"
    tools:context=".fragments.Shop2">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".06"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

<!--            <ImageView-->
<!--                android:id="@+id/backBut"-->
<!--                android:layout_width="25dp"-->
<!--                android:layout_height="25dp"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:src="@drawable/backsvg"-->
<!--                app:layout_constraintStart_toStartOf="@+id/leftGuide"-->
<!--                app:layout_constraintTop_toTopOf="@+id/topGuide" />-->

<!--            <TextView-->
<!--                android:id="@+id/shopText"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/roboto_medium"-->
<!--                android:text="SHOP"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="32sp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                app:layout_constraintStart_toEndOf="@id/backBut"-->
<!--                app:layout_constraintTop_toTopOf="@id/topGuide" />-->

            <ImageView
                android:id="@+id/shopImage"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:paddingHorizontal="20dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginTop="55dp"
                app:layout_constraintTop_toBottomOf="@id/topGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"/>
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sample Text"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:paddingStart="8dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@+id/shopImage"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sample Text"
                android:textColor="#C9C9C9"
                android:textSize="12dp"
                android:paddingStart="8dp"
                android:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sample Text"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:paddingStart="8dp"
                android:fontFamily="@font/montserrat"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"/>

            <LinearLayout
                android:id="@+id/l6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintStart_toStartOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/textView3">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Size"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/montserrat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="18sp"
                        android:paddingEnd="10dp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#FF4206"
                        android:text="Size Chart"/>
                </RelativeLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buyMerch"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:textColor="#FFF"
                android:background="@drawable/registerbutton"
                app:layout_constraintStart_toEndOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toBottomOf="@id/l6"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Product Description"
                android:textColor="#FFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/leftGuide"
                app:layout_constraintTop_toBottomOf="@id/buyMerch" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/productDescriptionText"
                app:layout_constraintStart_toEndOf="@id/leftGuide"
                app:layout_constraintEnd_toEndOf="@id/rightGuide"
                app:layout_constraintTop_toBottomOf="@id/productDescription"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>